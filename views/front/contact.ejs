<%- include('../header.ejs')%>
<!-- Section: Design Block -->
<section class=" text-center text-lg-start">
    <style>
      .rounded-t-5 {
        border-top-left-radius: 0.5rem;
        border-top-right-radius: 0.5rem;
      }
  
      @media (min-width: 992px) {
        .rounded-tr-lg-0 {
          border-top-right-radius: 0;
        }
  
        .rounded-bl-lg-5 {
          border-bottom-left-radius: 0.5rem;
        }
      }
    </style>
    <div class="container">
        <div class="card mb-3 mt-5">
            <div class="row g-0 d-flex align-items-center">
              <div class="col-md-6 d-none d-lg-flex">
                <img src="/images/004.jpg" alt="Trendy Pants and Shoes"
                  class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" />
              </div>
              <div class="col-md-6">
              
                <div class="card-body ">
                    <h1>Contact</h1>
                  <form>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                      <input type="text" id="form2Example1" placeholder="Name" class="form-control" />
                      
                    </div>
                    <div class="form-outline mb-4">
                        <input type="email" id="form2Example1" placeholder="email" class="form-control" />
                        
                      </div>
        
                    <!-- Password input -->
                    <div class="form-outline mb-4">
                      <input type="text" id="form2Example2" placeholder="Phone" class="form-control" />
                     
                    </div>
                    <div class="form-group">
                        <textarea name="message" rows="5" class="form-control" placeholder="Message"></textarea>
                      </div>
        
                  
                   
        
                    <!-- Submit button -->
                    <button type="button" class="btn btn-primary btn-block mb-4">Send Message</button>
        
                  </form>
        
                </div>
              </div>
            </div>
          </div>
        </section>

    </div>
   
  <!-- Section: Design Block -->
<%- include('../footer.ejs')%>