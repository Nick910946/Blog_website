<%- include('../../header.ejs')%>
<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <%- include('../../sidebar.ejs')%> 
  
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                          <div class="dash-title">
                              <h1>Edit Blog</h1>
                          </div>
                        </div>
                        <div class="blog-form">
                          <form action="/admin/blogUpdate/<%= d._id %>" method="post" enctype="multipart/form-data">
                            <div class="form-group form-row">
                                <label class="col-md-3">Title <span class="required"></span></label>
                                <div class="col-md-9">
                                  <input type="text" class="form-control" placeholder="Title" value="<%= d.title %>" name="title" required>
                                </div>
                            </div>
                            
                            <div class="form-group form-row">
                                <label class="col-md-3">Description <span class="required"></span></label>
                                <div class="col-md-9">
                                  <textarea name="description"  class="form-control" placeholder="Description" required ><%= d.description %></textarea> 
                                </div>
                            </div>
                            <div class="form-group form-row">
                              <label class="col-md-3">Image <span class="required"></span></label>
                              <div class="col-md-9">
                              
                                <input type="file" class="form-control " name="image" required>
                                <img src="<%= d.image.url %>" class="form-control" style="height: 100px; width: 100px;">
                              </div>
                          </div>
                            <div class="form-group form-row">
                                <label class="col-md-3"></label>
                                <div class="col-md-9">
                                  <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                          </form>
                        </div>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../../footer.ejs')%>