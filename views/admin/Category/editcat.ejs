<%- include('../../header.ejs')%>
<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <%- include('../../sidebar.ejs')%> 
  
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                          <div class="dash-title">
                              <h1>Edit Category</h1>
                          </div>
                        </div>
                        <div class="blog-form">
                          <form action="/admin/Updatecat/<%= d._id %>" method="post">
                            <div class="form-group form-row">
                                <label class="col-md-3">Title <span class="required"></span></label>
                                <div class="col-md-9">
                                  <input type="text" class="form-control" placeholder="Title" value="<%= d.title %>" name="title" required>
                                </div>
                            </div>
                            
                           
                            <div class="form-group form-row">
                                <label class="col-md-3"></label>
                                <div class="col-md-9">
                                  <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                          </form>
                        </div>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../../footer.ejs')%>